<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="3columns" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="content">
     <block class="Magento\Cms\Block\Block" name="nb_block_2">
       <arguments>
            <argument name="block_id" xsi:type="string">nb_block_2</argument>
       </arguments>
   </block>
   <referenceBlock name="catalog.compare.sidebar" remove="true"/>
<referenceBlock name="wishlist_sidebar" remove="true"/>
    </referenceContainer>

<referenceContainer name="sidebar.main">
   <block class="Magento\Cms\Block\Block" name="nb_block_1">
       <arguments>
            <argument name="block_id" xsi:type="string">nb_block_1</argument>
       </arguments>
   </block>
</referenceContainer>
<referenceContainer name="sidebar.additional">
   <block class="Magento\Cms\Block\Block" name="nb_block_3">
       <arguments>
            <argument name="block_id" xsi:type="string">nb_block_3</argument>
       </arguments>
   </block>
</referenceContainer>

<move element="div.sidebar.main" destination="columns" after="main"/>

</page>